/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}

.tab-item text {
  padding: 20rpx;
}

.active {
  color: #ff5777;
}

.active text {
  border-bottom: 3px solid #ff5777;
}
